{
  "id": 17,
  "name": "waterfall",
  "title": "瀑布图",
  "renderer": "echarts",
  "params": [
    {
      "name": "data",
      "title": "数据项配置",
      "items": [
        {
          "name": "xAxis",
          "title": "X轴",
          "component": "select"
        },
        {
          "name": "metrics",
          "title": "显示指标",
          "component": "select"
        },
        {
          "name": "suffixYAxis",
          "title": "Y轴后缀",
          "component": "input"
        }
      ]
    },
    {
      "name": "display",
      "title": "显示",
      "items": [
        {
          "name": "label",
          "title": "数值",
          "component": "checkbox"
        },
        {
          "name": "ascend",
          "title": "累计",
          "component": "checkbox"
        },
        {
          "name": "xAxisRotate",
          "title": "x轴文字旋转角度",
          "component": "inputnumber"
        },
        {
          "name": "xAxisInterval",
          "title": "x轴刻度显示间隔",
          "component": "inputnumber"
        },
        {
          "name": "dataZoomThreshold",
          "title": "超出后缩放",
          "component": "inputnumber"
        }
      ]
    },
    {
      "name": "legend",
      "title": "图例",
      "items": [
        {
          "name": "hasLegend",
          "title": "开启图例",
          "component": "checkbox",
          "span": 24
        },
        {
          "name": "legendPosition",
          "title": "图例位置",
          "component": "radio",
          "values": [{
            "name": "顶部",
            "value": "top"
          }, {
            "name": "底部",
            "value": "bottom"
          }, {
            "name": "右侧",
            "value": "right"
          }],
          "default": "top",
          "span": 24
        }
      ]
    },
    {
      "name": "tools",
      "title": "工具",
      "items": [
        {
          "name": "toolbox",
          "title": "Toolbox",
          "component": "checkbox"
        }
      ]
    },
    {
      "name": "position",
      "title": "边距",
      "items": [
        {
          "name": "top",
          "title": "上边距",
          "component": "inputnumber",
          "default": 45
        },
        {
          "name": "bottom",
          "title": "下边距",
          "component": "inputnumber",
          "default": 40
        },
        {
          "name": "left",
          "title": "左边距",
          "component": "inputnumber",
          "default": 50
        },
        {
          "name": "right",
          "title": "右边距",
          "component": "inputnumber",
          "default": 30
        }
      ]
    }
  ]
}
